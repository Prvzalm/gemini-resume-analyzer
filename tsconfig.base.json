{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@resume-analyzer/config": ["packages/config/dist/index"],
      "@resume-analyzer/config/*": ["packages/config/dist/*"],
      "@resume-analyzer/core": ["packages/core/dist/index"],
      "@resume-analyzer/core/*": ["packages/core/dist/*"],
      "@resume-analyzer/ui": ["packages/ui/dist/index"],
      "@resume-analyzer/ui/*": ["packages/ui/dist/*"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": ["node_modules", "dist"]
}
